@model IEnumerable<MP_Group3_StockManagement.Models.Inventory>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Inventory", "AddInventory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Supplier.SupplierName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.TotalQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ProductName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TotalQuantity)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ReleaseQuantity)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ExpirationDate)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.InventoryID }) |
            @Html.ActionLink("Details", "Details", new { id = item.InventoryID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.InventoryID })
        </td>
    </tr>
}

</table>
