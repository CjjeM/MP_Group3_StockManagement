<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Stock Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        @Html.ActionLink("Stock Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>

                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>

                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>

                @if (Session["Username"] != null)
                {
                    <li class="nav-item active">
                        @Html.ActionLink("Supplier", "Index", "Supplier", new { area = "" }, new { @class = "nav-link" })
                    </li>

                    <li class="nav-item active">
                        @Html.ActionLink("Product", "Index", "Product", new { area = "" }, new { @class = "nav-link" })
                    </li>

                    <li class="nav-item active">
                        @Html.ActionLink("Inventory", "Index", "Inventory", new { area = "" }, new { @class = "nav-link" })
                    </li>

                    <li class="nav-item active">
                        [REPORT HERE!!!]
                    </li>
                }

            </ul>

            <ul class="navbar-nav ml-auto">
                @if (Session["Username"] != null)
                {
                    <li class="nav-item active" >
                        <a class ="nav-link" href="@Url.Action("ViewLogs", "Log")">
                            Hello @Session["Username"]!
                        </a>
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Logout", "Logout", "UserAccount", new { area = "" }, new { @class = "nav-link" })
                    </li>
                }
                else
                {
                    <li class="nav-item active">
                        @Html.ActionLink("Signup", "Signup", "UserAccount", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Login", "Login", "UserAccount", new { area = "" }, new { @class = "nav-link" })
                    </li>
                }

            </ul>

        </div>
    </nav>

    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Stock Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
